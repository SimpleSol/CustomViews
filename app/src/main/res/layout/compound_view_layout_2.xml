<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cmp_2_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        fresco:placeholderImage="@drawable/tiger"
        fresco:placeholderImageScaleType="center"
        fresco:roundAsCircle="true"
        />

    <TextView
        android:id="@+id/cmp_2_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/cmp_2_image"
        android:text="Tiger"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/cmp_2_text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cmp_2_text_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/cmp_2_image"
        android:ellipsize="end"
        android:lines="4"
        android:text="@string/tiger_description"
        android:textSize="12sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/cmp_2_image"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/btn_edit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_pencil_grey600_24dp"
            />

        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_left_bold_circle_grey600_24dp"
            />

        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_binoculars_grey600_24dp"
            />

        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_calendar_blank_grey600_24dp"
            />

    </LinearLayout>

</merge>